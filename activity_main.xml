<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/black">

    <!-- SightSpeak â€œLEGOâ€ Logo -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="500dp"
        android:layout_height="150dp"
        android:layout_marginBottom="0dp"
        android:contentDescription="Murdock logo2"
        android:src="@drawable/ic_murdock_logo2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Language + Mode Row -->
    <LinearLayout
        android:id="@+id/langRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/logoImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Spinner
            android:id="@+id/langSpinner"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/white"
            android:popupBackground="@android:color/white"
            android:contentDescription="Select language"
            android:theme="@style/WhiteSpinnerTheme"/>

        <ToggleButton
            android:id="@+id/translateToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="Q&amp;A"
            android:textOn="Translate"
            android:textSize="18sp"
            android:padding="12dp"
            android:layout_marginStart="8dp"
            android:contentDescription="Toggle between question-answer and translation mode"/>
    </LinearLayout>

    <!-- Camera Preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/langRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Text input -->
    <EditText
        android:id="@+id/inputEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter prompt"
        android:textColorHint="@android:color/darker_gray"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:backgroundTint="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/previewView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Big action buttons in a row -->
    <LinearLayout
        android:id="@+id/buttonRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/inputEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/ttsButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Run Text"
            android:textSize="20sp"
            android:padding="16dp"
            android:backgroundTint="@android:color/holo_blue_light"
            android:contentDescription="Run text inference"/>

        <Button
            android:id="@+id/switchCamButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ”„ Switch"
            android:textSize="20sp"
            android:padding="16dp"
            android:layout_marginStart="8dp"
            android:backgroundTint="@android:color/holo_red_light"
            android:contentDescription="Switch front/back camera"/>

        <Button
            android:id="@+id/voiceCmdButton"
            android:layout_width="0dp"
            android:layout_height="95dp"
            android:layout_weight="1"
            android:text="ðŸŽ¤ Talk"
            android:textSize="20sp"
            android:padding="16dp"
            android:layout_marginStart="8dp"
            android:backgroundTint="@android:color/holo_orange_light"
            android:contentDescription="Start voice command"/>
    </LinearLayout>

    <!-- ðŸ“· Describe button full-width below -->
    <Button
        android:id="@+id/visionButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ðŸ“· Describe"
        android:textSize="20sp"
        android:padding="16dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:contentDescription="Take photo and describe scene"
        app:layout_constraintTop_toBottomOf="@id/buttonRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Results area -->
    <TextView
        android:id="@+id/resultText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Waiting for input..."
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textIsSelectable="true"
        android:padding="16dp"
        android:background="@android:color/black"
        android:contentDescription="Result text"
        app:layout_constraintTop_toBottomOf="@id/visionButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
